<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">8dp</item>
        <item name="neumorph_cornerSizeTopRight">8dp</item>
        <item name="neumorph_cornerSizeBottomLeft">8dp</item>
        <item name="neumorph_cornerSizeBottomRight">8dp</item>
    </style>

</resources>
